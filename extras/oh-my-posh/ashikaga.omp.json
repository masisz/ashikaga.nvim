{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "console_title_template": "{{ .Shell }} in {{ .Folder }}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "path",
          "style": "diamond",
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0b0",
          "template": "  {{ .Path }} ",
          "background": "#7591BC",
          "foreground": "#E5E7EB",
          "properties": {
            "style": "full",
            "home_icon": "~"
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "template": " {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}  \uf046 {{ .Staging.String }}{{ end }} ",
          "background": "#CDC097",
          "foreground": "#001217",
          "properties": {
            "branch_icon": "",
            "fetch_status": true,
            "fetch_upstream_icon": true
          }
        },
        {
          "type": "node",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "template": "  {{ .Full }} ",
          "background": "#75bc84",
          "foreground": "#E5E7EB"
        },
        {
          "type": "python",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "template": "  {{ .Full }} ",
          "background": "#BFA8D5",
          "foreground": "#E5E7EB"
        },
        {
          "type": "ruby",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "template": "  {{ .Full }} ",
          "background": "#C44f4f",
          "foreground": "#E5E7EB"
        },
        {
          "type": "time",
          "style": "diamond",
          "leading_diamond": "\ue0b0",
          "trailing_diamond": "\ue0b4",
          "template": "  {{ .CurrentDate | date .Format }} ",
          "background": "#001217",
          "foreground": "#E5E7EB",
          "properties": {
            "time_format": "15:04"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "status",
          "style": "plain",
          "template": "❯",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#C44f4f{{ end }}",
            "{{ if eq .Code 0 }}#7591BC{{ end }}"
          ],
          "properties": {
            "always_enabled": true
          }
        }
      ]
    }
  ],
  "tooltips": [
    {
      "type": "aws",
      "tips": ["aws"],
      "style": "diamond",
      "leading_diamond": "\ue0b0",
      "trailing_diamond": "\ue0b4",
      "template": "  {{.Profile}}{{if .Region}}@{{.Region}}{{end}} ",
      "background": "#FFA400",
      "foreground": "#001217"
    },
    {
      "type": "az",
      "tips": ["az"],
      "style": "diamond",
      "leading_diamond": "\ue0b0",
      "trailing_diamond": "\ue0b4",
      "template": "  {{ .Name }} ",
      "background": "#9ec3f0",
      "foreground": "#001217"
    }
  ],
  "transient_prompt": {
    "template": "<#7591BC>❯</> ",
    "background": "transparent"
  },
  "secondary_prompt": {
    "template": "<#BFA8D5>❯❯</> ",
    "background": "transparent"
  }
}
